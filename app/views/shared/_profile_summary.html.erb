<ul class="user-stats">
  <li>
    <div class="number-label">Reviews</div>
    <div class="number-value"><%= @user.reviews_count %></div>
  </li> 
  <li id="user-followers">
    <div class="number-label">Followers</div>
    <div class="number-value"><%= @user.followed_relationships.count %></div>
  </li>
  <li id="user-following">
    <div class="number-label">Following</div>
    <div class="number-value"><%= @user.following_relationships.count %></div>
  </li>
</ul>

<% if current_user.following?(@user) %>
  <%= link_to "Following", user_relationship_path(@user, @user), method: :delete, class: "btn btn-danger btn-center", remote: true %>
<% elsif current_user != @user %>
  <%= link_to "Follow", user_relationships_path(@user), method: :post, class: "btn btn-success btn-center", remote: true %>
<% end %>
